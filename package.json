{
    "name": "vscode-terraform-azure",
    "displayName": "vscode-terraform-azure",
    "description": "VS Code extension for developing with Terraform on Azure",
    "version": "0.0.1",
    "publisher": "damiencaro",
    "engines": {
        "vscode": "^1.18.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.plan",
        "onCommand:extension.init",
        "onCommand:extension.visualize",
        "onCommand:extension.execTest",
        "onCommand:extension.apply",
        "onCommand:extension.lint"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.plan",
                "title": "Terraform Plan",
                "category": "Azure"
            },
            {
                "command": "extension.visualize",
                "title": "Terraform Visualize",
                "category": "Azure"
            },
            {
                "command": "extension.init",
                "title": "Terraform Init",
                "category": "Azure"                
            },
            {
                "command": "extension.execTest",
                "title": "Terraform - Execute test",
                "category": "Azure"                
            },
            {
                "command": "extension.apply",
                "title": "Terraform Apply",
                "category": "Azure"                
            },
            {
                "command": "extension.lint",
                "title": "Terraform Lint Module",
                "category": "Azure"                
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "extensionDependencies": [
        "ms-vscode.azure-account",
        "mauve.terraform"
    ]
}
